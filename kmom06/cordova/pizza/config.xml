<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Pizzeria Calzone</name>
    <description>
        En app f√∂r en pizzeria
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
      <allow-intent href="market:*" />
      <splash src="resources/splash.png" density="hdpi"/>
      <splash src="resources/splash.png" density="mdpi"/>
      <splash src="resources/splash.png" density="xhdpi"/>

      <splash src="resources/splash.png" density="land-hdpi"/>
      <splash src="resources/splash.png" density="land-ldpi"/>
      <splash src="resources/splash.png" density="land-mdpi"/>
      <splash src="resources/splash.png" density="land-xhdpi"/>

      <splash src="resources/splash.png" density="port-hdpi"/>
      <splash src="resources/splash.png" density="port-ldpi"/>
      <splash src="resources/splash.png" density="port-mdpi"/>
      <splash src="resources/splash.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="resources/icon.png"/>

    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="5000" />

</widget>
